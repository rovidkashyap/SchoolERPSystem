, @model SchoolERPSystem.Web.Areas.admin.Models.FrontOfficeViewModel.ComplaintViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Front Office
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                
                <div class="col-md-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-12">
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Add Complain</h3>
                                </div>
                                <!-- /.box-header -->
                                <!-- form start -->

                                <form class="form-horizontal">
                                    <div class="box-body">
                                        

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ComplainTypeId, htmlAttributes: new { @class = "control-label" })
                                                @Html.DropDownList("ComplainTypeId", (SelectList)ViewBag.ComplaintTypeId, "-- Select Complaint Type --", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.ComplainTypeId, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.SourceId, htmlAttributes: new { @class = "control-label" })
                                                @Html.DropDownList("SourceId", (SelectList)ViewBag.SourceId, "-- Select Source --", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.SourceId, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ComplainBy, htmlAttributes: new { @class = "control-label" })
                                                @Html.EditorFor(model => model.ComplainBy, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ComplainBy, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label" })
                                                
                                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ComplainDate, htmlAttributes: new { @class = "control-label" })
                                                
                                                    @Html.EditorFor(model => model.ComplainDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    @Html.ValidationMessageFor(model => model.ComplainDate, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                                                
                                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ActionTaken, htmlAttributes: new { @class = "control-label" })
                                                
                                                    @Html.EditorFor(model => model.ActionTaken, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.ActionTaken, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Assigned, htmlAttributes: new { @class = "control-label" })
                                                
                                                    @Html.EditorFor(model => model.Assigned, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Assigned, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                                               
                                                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                                                
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Documents, htmlAttributes: new { @class = "control-label" })
                                                
                                                    @Html.EditorFor(model => model.Documents, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Documents, "", new { @class = "text-danger" })
                                                
                                            </div>
                                        
                                    </div>
                                    <!-- /.box-body -->
                                    <div class="box-footer">
                                        <input type="submit" value="Save" class="btn btn-info pull-right" />
                                        <!-- /.box-footer -->
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    @{ Html.RenderAction("List", "Complaint", new { area = "Admin" }); }
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
