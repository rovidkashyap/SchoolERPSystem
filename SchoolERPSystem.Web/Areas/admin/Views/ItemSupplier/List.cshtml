@model IEnumerable<SchoolERPSystem.Web.Areas.admin.Models.InventoryViewModel.ItemSupplierViewModel>


    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Item Supplier List</h3>

            <div class="box-tools">
                <ul class="pagination pagination-sm no-margin pull-right">
                    <li><a href="#" id="printpdf"><span class="fa fa-file-pdf-o"></span></a></li>
                    <li><a href="#" onclick="PrintDiv('dvContents')"><span class="fa fa-print"></span></a></li>
                    <li><a href="#"><span class="fa fa-file-excel-o"></span></a></li>
                </ul>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body" id="dvContents">

            <table class="table table-bordered">
                <tr>
                    <th>
                        @Html.DisplayName("Item Supplier")
                    </th>
                    <th>
                        @Html.DisplayName("Contact Person")
                    </th>
                    <th>
                        @Html.DisplayName("Address")
                    </th>

                    <th style="width: 80px">@Html.DisplayName("Action")</th>
                </tr>
                @foreach (var item in Model)
                {
                    using (Html.BeginForm())
                    {
            <tr>
                <td>
                    <a href="#">@Html.Raw(item.Name)</a> <br /> <i class="fa fa-phone-square"></i> @Html.Raw(item.Phone) <br /> <i class="fa fa-envelope"></i> @Html.Raw(item.Email)
                </td>

                <td>
                    <a href="#">@Html.Raw(item.ContactPersonName)</a> <br /> <i class="fa fa-phone-square"></i> @Html.Raw(item.ContactPersonPhone) <br /> <i class="fa fa-envelope"></i> @Html.Raw(item.ContactPersonEmail)
                </td>

                <td>
                    <i class="fa fa-building"></i> @Html.Raw(item.Address)
                </td>
                
                <td>
                    <span>&nbsp;</span>
                    <a href="@Url.Action("Index", "ItemSupplier", new { id = item.Id })">
                        <span class="fa fa-pencil" area-hidden="true"></span>
                    </a>
                    <span>&nbsp;</span>

                    <a href="@Url.Action("Delete", "ItemSupplier", new { id = item.Id })">
                        <span class="fa fa-remove"></span>
                    </a>

                </td>
            </tr>
                    }
                }
            </table>
        </div>
        <!-- /.box-body -->
    </div>


