@model IEnumerable<SchoolERPSystem.Web.Areas.student.Models.StudentAdmissionViewModels.StudentAdmissionViewModel>

@{
    /**/

    ViewBag.Title = "Student Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1 class="pull-left">Student Information</h1>
                <div class="pull-right-container pull-right">

                </div>
            </section>
            <br /><br />
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-lg-12 col-md-12">

                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#listview" data-toggle="tab"><i class="fa fa-reorder"></i>&nbsp;&nbsp;List View</a></li>
                                <li><a href="#gridview" data-toggle="tab"><i class="fa fa-newspaper-o"></i>&nbsp;&nbsp;Grid View</a></li>
                            </ul>
                            <div class="tab-content">

                                <!-- /.tab-pane -->
                                <div class="active tab-pane" id="listview">
                                    <div class="box-tools">
                                        <ul class="pagination pagination-sm no-margin pull-right">
                                            <li><a href="#" id="printpdf"><span class="fa fa-file-pdf-o"></span></a></li>
                                            <li><a href="#" onclick="PrintDiv('dvContents')"><span class="fa fa-print"></span></a></li>
                                            <li><a href="#"><span class="fa fa-file-excel-o"></span></a></li>
                                        </ul>
                                    </div>
                                    <br /><br />
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="box-body no-padding" id="dvContents">
                                                <table class="table table-striped">
                                                    <tr>
                                                        <th>@Html.DisplayName("Admission Number")</th>
                                                        <th>@Html.DisplayName("Student Name")</th>
                                                        <th>@Html.DisplayName("Father Name")</th>
                                                        <th>@Html.DisplayName("Date Of Birth")</th>
                                                        <th>@Html.DisplayName("Gender")</th>
                                                        <th>@Html.DisplayName("Category")</th>
                                                        <th>@Html.DisplayName("Mobile Number")</th>
                                                        <th>@Html.DisplayName("National Identification Number")</th>
                                                        <th>@Html.DisplayName("Local Identification Number")</th>
                                                        <th>@Html.DisplayName("Action")</th>
                                                    </tr>
                                                    @foreach (var item in Model)
                                                    {
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => item.AdmissionNumber)</td>
                                                    <td>
                                                        @{var fullName = item.FirstName + " " + item.LastName;
                                                            <a href="@Url.Action("view", "student", new { area = "student", id = item.Id })">@Html.DisplayFor(modelItem => fullName)</a>
                                                        }
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => item.FatherName)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.GenderName)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.NationalIdentificationNumber)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.LocalIdentificationNumber)</td>
                                                    <td>
                                                        <a href="@Url.Action("view", "student", new { area = "student", id = item.Id })">
                                                            <span class="fa fa-bars" area-hidden="true"></span>
                                                        </a>
                                                        &nbsp;
                                                        <a href="@Url.Action("Edit", "student", new { area = "student", id = item.Id })">
                                                            <span class="fa fa-pencil" area-hidden="true"></span>
                                                        </a>
                                                        @*@Html.ActionLink("Profile", "profile", new { id = item.ApplicationUserId }) |*@
                                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ApplicationUserId })*@
                                                    </td>
                                                </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                        <!-- /.box-header -->
                                        <!-- /.box-body -->
                                    </div>
                                    <!-- /.box-body -->
                                </div>

                                <div class="tab-pane" id="gridview">
                                    <!-- Post -->
                                    <div class="row" style="display:inline-table;overflow:hidden;">

                                    </div>


                                    <!-- /.post -->
                                </div>

                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>

                    <!-- /.col -->
                </div>

            </section>
            <!-- /.content -->
        </div>

    </div>
    <!-- ./wrapper -->
</body>
</html>

