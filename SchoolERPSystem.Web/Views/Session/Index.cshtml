@model SchoolERPSystem.Web.Models.DependencyViewModels.SettingViewModel.SessionViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header">
                <h1>Settings</h1>
            </section>

            <section class="content">
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-5">
                            <div class="box box-info">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Add Session</h3>
                                </div>
                                <!-- /.box-header -->
                                <!-- form start -->

                                <form class="form-horizontal">
                                    <div class="box-body">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SessionName, htmlAttributes: new { @class = "control-label" })
                                            
                                                @Html.EditorFor(model => model.SessionName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.SessionName, "", new { @class = "text-danger" })
                                            
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.isActive, htmlAttributes: new { @class = "control-label" })
                                           
                                                <div class="checkbox">
                                                    @Html.EditorFor(model => model.isActive)
                                                    @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                                                </div>
                                            
                                        </div>

                                    </div>
                                    <!-- /.box-body -->
                                    <div class="box-footer">
                                        <button type="submit" value="Create" class="btn btn-info pull-right">Save</button>
                                    </div>
                                    <!-- /.box-footer -->
                                </form>
                            </div>
                        </div>
                    }
                    <div class="col-md-7">
                        @{ Html.RenderAction("List", "Session"); }
                    </div>
                </div>
            </section>

        </div>
    </div>
    <!-- ./wrapper -->

</body>
</html>
